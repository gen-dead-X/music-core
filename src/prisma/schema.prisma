generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Use UUID as the default ID
model User {
    id       String   @id @default(uuid())
    email    String   @unique
    name     String
    username String?
    age      Int?
    gender   String?
    password String
    Profile  Profile?
}

model Profile {
    id     String @id @default(uuid())
    bio    String
    user   User   @relation(fields: [userId], references: [id])
    userId String @unique
}
